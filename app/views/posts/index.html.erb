<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
<h3 class="my-3">Post Index</h3>
<% @posts.each do |post| %>
<div class="card mb-3" style="width: 25rem;">
  <div class="card-header"><%=image_tag post.user.get_profile_image(50,50),class: "rounded-circle" %>
<%=link_to post.user.name,user_path(post.user.id) %></div>
<%=image_tag post.get_image(200,200),class: "card-img-top" %>
<div class="card-body">
<h5 class="card-title"><%=post.knittingname %></h5>
<p class="card-text"><%=post.caption %></p><br>
<p><%=render 'comments/comments',post:post %></p>
<p><%=render 'comments/form',post:post,comment:@comment %></p>
</div>
</div>
<% end %>
</div>
</div>
</div>