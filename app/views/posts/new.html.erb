<div class="container">
<div class="row">
  <div class="col-6 mx-auto my-4">
<h3>New Post</h3>
<%=render "layouts/error",post: @post %>
<%=form_with model:@post do |f| %>
<h5 class="mt-3">knitting name</h5>
<%=f.text_field:knittingname %>
<h5  class="mt-3">image</h5>
<%=f.file_field:image,accept: "image/*" %>
<h5  class="mt-3">caption</h5>
<%=f.text_area:caption,class: "mb-3" %>
<p><%=f.submit "post",class: "btn btn-outline-secondary"%></p>
<% end %>
</div>
</div>
</div>